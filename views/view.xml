<odoo>
    <record id="activity_check_pending_activities_action" model="ir.actions.server">
        <field name="name">Check Pending Activities</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">
            if env.uid:
                env['res.users'].browse(env.uid).check_pending_activities()
        </field>
    </record>
</odoo>
