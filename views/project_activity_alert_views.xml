<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Modificar la vista del formulario del usuario -->
        <record id="view_users_form_alert" model="ir.ui.view">
            <field name="name">res.users.form.alert</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <div t-if="user.pending_activities_message" class="alert alert-danger" role="alert">
                        <t t-esc="user.pending_activities_message"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
