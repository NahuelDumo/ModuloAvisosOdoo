<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="activity_reminder_template" inherit_id="web.assets_backend">
        <xpath expr="." location="inside">
            <div t-if="get_reminder_message()">
                <div class="alert alert-{{ get_reminder_color() }}" role="alert">
                    <span>{{ get_reminder_message() }}</span>
                </div>
            </div>
        </xpath>
    </template>
</odoo>